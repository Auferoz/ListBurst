---
// src/pages/Games/index.astro
import { ListGames, getAvailableYears } from '../../data/gamesDB';
import Layout from '../../layouts/Layout.astro';
import CardGamesList from '../../components/Globals/CardGamesList.astro';
import FilterBar from '../../components/Globals/FilterBar.astro';
import CardDashboard from '../../components/Globals/CardDashboard.astro';
import IconGamepad from '../../components/Icons/IconGamepad.astro';

// Obtener años disponibles (más reciente primero)
const availableYears = getAvailableYears().reverse();
const currentYear = new Date().getFullYear();
const defaultYear = availableYears.includes(currentYear) ? currentYear : availableYears[0];

// Extraer géneros únicos de todos los juegos (split por coma)
const allGenres = [...new Set(
    ListGames.flatMap(g => g.genre.split(',').map(genre => genre.trim().toLowerCase()))
)].sort();

// Extraer plataformas únicas
const allPlatforms = [...new Set(
    ListGames.map(g => g.console_pc.toLowerCase())
)].sort();

// Convertir a formato de opciones para FilterSelect
const yearOptions = availableYears.map(year => ({ value: String(year), label: String(year) }));
const genreOptions = allGenres.map(genre => ({ value: genre, label: genre }));
const platformOptions = allPlatforms.map(platform => ({ value: platform, label: platform }));
const statusOptions = [
    { value: "completado", label: "Completado" },
    { value: "abandonado", label: "Abandonado" },
    { value: "jugando", label: "Jugando" },
    { value: "pausado", label: "Pausado" },
];
const orderOptions = [
    { value: "newest", label: "Más reciente" },
    { value: "oldest", label: "Más antiguo" },
    { value: "title-asc", label: "Título A-Z" },
    { value: "title-desc", label: "Título Z-A" },
];

// Agregar índice para ordenamiento
const gamesWithIndex = ListGames.map((game, index) => ({
    ...game,
    originalIndex: index,
}));
---

<Layout>
    <main class="max-w-7xl w-full mx-auto p-4">
        <header class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2">
            <h1 class="text-xl font-bold justify-between flex items-center">Games List <span id="games-count" class="text-sm text-zinc-400"></span></h1>
            <!-- <p class="text-xs text-start">
                Lista de mis juegos organizados por plataforma y estado. Usa los filtros para encontrar juegos según tus preferencias.
            </p> -->
        </header>

        <!-- Dashboard Datos -->
        <section class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-4 gap-4 mt-4">
            <CardDashboard text="Jugando" number={gamesWithIndex.filter(g => g.estado === "Jugando").length} color="green" id="dash-playing">
                <IconGamepad width={24} height={24} />
            </CardDashboard>
            <CardDashboard text="Pausados" number={gamesWithIndex.filter(g => g.estado === "Pausado").length} color="amber" id="dash-paused">
                <IconGamepad width={24} height={24} />
            </CardDashboard>
            <CardDashboard text="Completados" number={gamesWithIndex.filter(g => g.estado === "Completado").length} color="violet" id="dash-completed">
                <IconGamepad width={24} height={24} />
            </CardDashboard>
            <CardDashboard text="Abandonados" number={gamesWithIndex.filter(g => g.estado === "Abandonado").length} color="red" id="dash-abandoned">
                <IconGamepad width={24} height={24} />
            </CardDashboard>
        </section>

        <!-- Filtros -->
        <FilterBar
            filters={[
                { id: "filter-year", label: "Año", options: yearOptions, defaultValue: String(defaultYear) },
                // { id: "filter-genre", label: "Género", options: genreOptions, capitalize: true },
                { id: "filter-status", label: "Estado", options: statusOptions, capitalize: true },
                { id: "filter-platform", label: "Plataforma", options: platformOptions, capitalize: true },
                // { id: "filter-order", label: "Orden", options: orderOptions, defaultValue: "newest", includeAll: false },
            ]}
        />

        <!-- Grid de Games -->
        <div id="games-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mt-4 pb-20">
            {gamesWithIndex.map((game, index) => (
                <CardGamesList data={game} index={index} />
            ))}
        </div>

        <!-- Mensaje cuando no hay resultados -->
        <div id="no-results" class="hidden text-center py-12 text-zinc-400">
            <p class="text-lg">No se encontraron juegos con los filtros seleccionados</p>
        </div>
    </main>
</Layout>

<script>
    let gamesController: AbortController | null = null;

    function animateValue(el: HTMLElement, newValue: string) {
        const oldValue = el.textContent || '';
        if (oldValue === newValue) return;
        el.style.opacity = '0';
        setTimeout(() => {
            el.textContent = newValue;
            el.style.opacity = '1';
        }, 150);
    }

    function updateGamesDashboard(visibleCards: HTMLElement[]) {
        const dashPlaying = document.getElementById('dash-playing');
        const dashPaused = document.getElementById('dash-paused');
        const dashCompleted = document.getElementById('dash-completed');
        const dashAbandoned = document.getElementById('dash-abandoned');

        let playing = 0;
        let paused = 0;
        let completed = 0;
        let abandoned = 0;

        visibleCards.forEach(card => {
            const estado = card.dataset.estado?.toLowerCase() || '';
            if (estado === 'jugando') playing++;
            else if (estado === 'pausado') paused++;
            else if (estado === 'completado') completed++;
            else if (estado === 'abandonado') abandoned++;
        });

        if (dashPlaying) animateValue(dashPlaying, String(playing));
        if (dashPaused) animateValue(dashPaused, String(paused));
        if (dashCompleted) animateValue(dashCompleted, String(completed));
        if (dashAbandoned) animateValue(dashAbandoned, String(abandoned));
    }

    function initGamesFilters() {
        if (gamesController) gamesController.abort();
        gamesController = new AbortController();
        const { signal } = gamesController;

        const gamesGrid = document.getElementById('games-grid') as HTMLElement | null;
        const noResults = document.getElementById('no-results');
        const gamesCount = document.getElementById('games-count');

        if (!gamesGrid) return;

        const cards = Array.from(gamesGrid.querySelectorAll('.card-game')) as HTMLElement[];

        function applyFiltersAndSort(values: Record<string, string>) {
            if (!gamesGrid) return;
            const grid = gamesGrid;

            const yearValue = values['filter-year'] || 'all';
            const genreValue = values['filter-genre'] || 'all';
            const statusValue = values['filter-status'] || 'all';
            const platformValue = values['filter-platform'] || 'all';
            const orderValue = values['filter-order'] || 'newest';

            const visibleCards: HTMLElement[] = [];
            cards.forEach((card) => {
                const cardYears = card.dataset.year || '';
                const cardGenres = card.dataset.genres?.toLowerCase() || '';
                const cardStatus = card.dataset.estado?.toLowerCase() || '';
                const cardPlatform = card.dataset.platform?.toLowerCase() || '';

                const matchYear = yearValue === 'all' || cardYears.split(',').includes(yearValue);
                const matchGenre = genreValue === 'all' || cardGenres.includes(genreValue.toLowerCase());
                const matchStatus = statusValue === 'all' || cardStatus === statusValue.toLowerCase();
                const matchPlatform = platformValue === 'all' || cardPlatform === platformValue.toLowerCase();

                if (matchYear && matchGenre && matchStatus && matchPlatform) {
                    card.style.display = '';
                    visibleCards.push(card);
                } else {
                    card.style.display = 'none';
                }
            });

            visibleCards.sort((a, b) => {
                switch (orderValue) {
                    case 'newest':
                        return parseInt(b.dataset.index || '0') - parseInt(a.dataset.index || '0');
                    case 'oldest':
                        return parseInt(a.dataset.index || '0') - parseInt(b.dataset.index || '0');
                    case 'title-asc':
                        return (a.dataset.title || '').localeCompare(b.dataset.title || '');
                    case 'title-desc':
                        return (b.dataset.title || '').localeCompare(a.dataset.title || '');
                    default:
                        return 0;
                }
            });

            visibleCards.forEach(card => grid.appendChild(card));
            cards.forEach(card => {
                if (card.style.display === 'none') grid.appendChild(card);
            });

            if (visibleCards.length === 0) {
                noResults?.classList.remove('hidden');
                grid.classList.add('hidden');
            } else {
                noResults?.classList.add('hidden');
                grid.classList.remove('hidden');
            }

            if (gamesCount) {
                gamesCount.textContent = `· ${visibleCards.length} juego${visibleCards.length !== 1 ? 's' : ''}`;
            }

            // Actualizar dashboard con datos filtrados
            updateGamesDashboard(visibleCards);
        }

        document.addEventListener('filter-change', (e: Event) => {
            applyFiltersAndSort((e as CustomEvent).detail);
        }, { signal });

        // Aplicar filtros iniciales leyendo valores actuales de los selects
        const initialValues: Record<string, string> = {};
        const filtersSection = document.getElementById('filters');
        if (filtersSection) {
            const filterIds: string[] = JSON.parse(filtersSection.dataset.filterIds || '[]');
            filterIds.forEach(id => {
                const select = document.getElementById(id) as HTMLSelectElement | null;
                if (select) initialValues[id] = select.value;
            });
        }
        applyFiltersAndSort(initialValues);
    }

    document.addEventListener('astro:page-load', initGamesFilters);
</script>
