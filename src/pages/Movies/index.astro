---
// src/pages/Movies/List.astro — Lee datos del caché local (sin llamadas API)
import moviesCache from '../../data/cache/movies.json';
import Layout from '../../layouts/Layout.astro';
import CardMoviesList from '../../components/Globals/CardMoviesList.astro';
import FilterBar from '../../components/Globals/FilterBar.astro';
import CardDashboard from '../../components/Globals/CardDashboard.astro';
import IconMovie from '../../components/Icons/IconMovie.astro';

// Leer películas directamente del caché (sin llamadas API)
const moviesWithRatings = moviesCache.movies;

// Obtener años disponibles
const availableYears = [...new Set(moviesWithRatings.map(m => m.yearViewed).filter(Boolean))].sort((a, b) => b - a);
const currentYear = new Date().getFullYear();
const defaultYear = availableYears.includes(currentYear) ? currentYear : availableYears[0];

// Extraer géneros únicos de todas las películas
const allGenres = [...new Set(moviesWithRatings.flatMap(m => m.movie?.genres || []))].sort();

// Convertir a formato de opciones para FilterSelect
const yearOptions = availableYears.map(year => ({ value: String(year), label: String(year) }));
const genreOptions = allGenres.map(genre => ({ value: genre, label: genre }));
const orderOptions = [
    { value: "newest", label: "Más reciente" },
    { value: "oldest", label: "Más antiguo" },
    { value: "title-asc", label: "Título A-Z" },
    { value: "title-desc", label: "Título Z-A" },
    { value: "rating-desc", label: "Mejor valorada" },
    { value: "rating-asc", label: "Peor valorada" },
];

// Dashboard stats
const totalMovies = moviesWithRatings.length;
const totalGenres = allGenres.length;
const totalHours = Math.round(moviesWithRatings.reduce((sum, m) => sum + (m.movie?.runtime || 0), 0) / 60);
const avgRating = totalMovies > 0 ? (moviesWithRatings.reduce((sum, m) => sum + (m.movie?.rating || 0), 0) / totalMovies).toFixed(1) : '0';

// Agregar índice para ordenamiento
const moviesWithIndex = moviesWithRatings.map((data, index) => ({
    ...data,
    originalIndex: index,
}));
---

<Layout>
    <main class="max-w-7xl w-full mx-auto p-4">
        <header class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2">
            <h1 class="text-xl font-bold justify-between flex items-center">Movies List <span id="movies-count" class="text-sm text-zinc-400"></span></h1>
            <!-- <p class="text-xs text-start">
                Lista de mis películas vistas organizadas por año. Usa los filtros para encontrar películas según tus preferencias.
            </p> -->
        </header>

        <!-- Dashboard Datos -->
        <section class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-4 gap-4 mt-4">
            <CardDashboard text="Total películas" number={totalMovies} color="sky">
                <IconMovie width={24} height={24} />
            </CardDashboard>
            <CardDashboard text="Géneros" number={totalGenres} color="violet">
                <IconMovie width={24} height={24} />
            </CardDashboard>
            <CardDashboard text="Horas vistas" number={totalHours} color="green">
                <IconMovie width={24} height={24} />
            </CardDashboard>
            <CardDashboard text="Rating Trakt" number={avgRating} color="amber">
                <IconMovie width={24} height={24} />
            </CardDashboard>
        </section>

        <!-- Filtros -->
        <FilterBar
            filters={[
                { id: "filter-year", label: "Año", options: yearOptions, defaultValue: String(defaultYear) },
                { id: "filter-genre", label: "Género", options: genreOptions, capitalize: true },
                { id: "filter-order", label: "Orden", options: orderOptions, defaultValue: "newest", includeAll: false },
            ]}
        />

        <!-- Grid de Películas -->
        <div id="movies-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mt-4 pb-20">
            {moviesWithIndex.map((data, index) => (
                <CardMoviesList data={data} index={index} />
            ))}
        </div>

        <!-- Mensaje cuando no hay resultados -->
        <div id="no-results" class="hidden text-center py-12 text-zinc-400">
            <p class="text-lg">No se encontraron películas con los filtros seleccionados</p>
        </div>
    </main>
</Layout>

<script>
    let moviesController: AbortController | null = null;

    function initMoviesFilters() {
        if (moviesController) moviesController.abort();
        moviesController = new AbortController();
        const { signal } = moviesController;

        const moviesGrid = document.getElementById('movies-grid') as HTMLElement | null;
        const noResults = document.getElementById('no-results');
        const moviesCount = document.getElementById('movies-count');

        if (!moviesGrid) return;

        const cards = Array.from(moviesGrid.querySelectorAll('.card-movie')) as HTMLElement[];

        function applyFiltersAndSort(values: Record<string, string>) {
            if (!moviesGrid) return;
            const grid = moviesGrid;

            const yearValue = values['filter-year'] || 'all';
            const genreValue = values['filter-genre'] || 'all';
            const orderValue = values['filter-order'] || 'newest';

            const visibleCards: HTMLElement[] = [];
            cards.forEach((card) => {
                const cardYear = card.dataset.year;
                const cardGenres = card.dataset.genres?.toLowerCase() || '';

                const matchYear = yearValue === 'all' || cardYear === yearValue;
                const matchGenre = genreValue === 'all' || cardGenres.includes(genreValue.toLowerCase());

                if (matchYear && matchGenre) {
                    card.style.display = '';
                    visibleCards.push(card);
                } else {
                    card.style.display = 'none';
                }
            });

            visibleCards.sort((a, b) => {
                switch (orderValue) {
                    case 'newest':
                        return parseInt(b.dataset.index || '0') - parseInt(a.dataset.index || '0');
                    case 'oldest':
                        return parseInt(a.dataset.index || '0') - parseInt(b.dataset.index || '0');
                    case 'title-asc':
                        return (a.dataset.title || '').localeCompare(b.dataset.title || '');
                    case 'title-desc':
                        return (b.dataset.title || '').localeCompare(a.dataset.title || '');
                    case 'rating-desc':
                        return parseFloat(b.dataset.rating || '0') - parseFloat(a.dataset.rating || '0');
                    case 'rating-asc':
                        return parseFloat(a.dataset.rating || '0') - parseFloat(b.dataset.rating || '0');
                    default:
                        return 0;
                }
            });

            visibleCards.forEach(card => grid.appendChild(card));
            cards.forEach(card => {
                if (card.style.display === 'none') grid.appendChild(card);
            });

            if (visibleCards.length === 0) {
                noResults?.classList.remove('hidden');
                grid.classList.add('hidden');
            } else {
                noResults?.classList.add('hidden');
                grid.classList.remove('hidden');
            }

            if (moviesCount) {
                moviesCount.textContent = `· ${visibleCards.length} película${visibleCards.length !== 1 ? 's' : ''}`;
            }
        }

        document.addEventListener('filter-change', (e: Event) => {
            applyFiltersAndSort((e as CustomEvent).detail);
        }, { signal });

        // Aplicar filtros iniciales leyendo valores actuales de los selects
        const initialValues: Record<string, string> = {};
        const filtersSection = document.getElementById('filters');
        if (filtersSection) {
            const filterIds: string[] = JSON.parse(filtersSection.dataset.filterIds || '[]');
            filterIds.forEach(id => {
                const select = document.getElementById(id) as HTMLSelectElement | null;
                if (select) initialValues[id] = select.value;
            });
        }
        applyFiltersAndSort(initialValues);
    }

    document.addEventListener('astro:page-load', initMoviesFilters);
</script>
