---
// src/pages/Series/List.astro — Lee datos del caché local (sin llamadas API)
import seriesCache from '../../data/cache/series.json';
import { ListSeriesSeasons, getAvailableYears } from '../../data/SeriesDB';
import Layout from '../../layouts/Layout.astro';
import CardSeriesList from '../../components/Globals/CardSeriesList.astro';
import FilterBar from '../../components/Globals/FilterBar.astro';
import CardDashboard from '../../components/Globals/CardDashboard.astro';
import IconDeviceTv from '../../components/Icons/IconDeviceTv.astro';
import IconSearchOff from '../../components/Icons/IconSearchOff.astro';

// Leer series directamente del caché (sin llamadas API)
const seriesData = seriesCache.series;

// Obtener años disponibles y géneros únicos
const availableYears = getAvailableYears().reverse(); // Más reciente primero
const currentYear = new Date().getFullYear();
const defaultYear = availableYears.includes(currentYear) ? currentYear : availableYears[0];

// Extraer géneros únicos de todas las series
const allGenres = [...new Set(seriesData.flatMap(d => d.show?.genres || []))].sort();

// Extraer plataformas únicas de las series
const allPlatforms = [...new Set(ListSeriesSeasons.map(s => s.platformViewed.toLowerCase()))].sort();

// Convertir a formato de opciones para FilterSelect
const yearOptions = availableYears.map(year => ({ value: String(year), label: String(year) }));
const genreOptions = allGenres.map(genre => ({ value: genre, label: genre }));
const platformOptions = allPlatforms.map(platform => ({ value: platform, label: platform }));
const statusOptions = [
    { value: "completed", label: "Completadas" },
    { value: "ongoing", label: "En progreso" },
];
const orderOptions = [
    { value: "newest", label: "Más reciente" },
    { value: "oldest", label: "Más antiguo" },
    { value: "title-asc", label: "Título A-Z" },
    { value: "title-desc", label: "Título Z-A" },
];

// Dashboard stats
const totalSeasons = seriesData.length;
const completedSeasons = seriesData.filter(d => d.localData?.statusViewed === 'completed').length;
const ongoingSeasons = seriesData.filter(d => d.localData?.statusViewed === 'ongoing').length;
const totalPlatforms = allPlatforms.length;

// Agregar índice para ordenamiento
const seriesDataWithIndex = seriesData.map((data, index) => ({
    ...data,
    originalIndex: index,
}));
---

<Layout>
    <main class="max-w-7xl w-full mx-auto p-4 pb-24 space-y-6">
        <!-- Header -->
        <header class="relative">
            <div class="flex flex-col lg:flex-row lg:items-end lg:justify-between gap-4">
                <div>
                    <p class="text-xs font-semibold uppercase tracking-[0.2em] text-amber-400/80 mb-1">Collection</p>
                    <h1 class="text-3xl sm:text-4xl font-extrabold tracking-tight text-white">
                        Series
                    </h1>
                    <p class="text-sm text-zinc-500 mt-1">
                        {totalSeasons} temporadas vistas
                        <span class="text-zinc-600">&middot;</span>
                        <span class="text-green-400/70">{completedSeasons} completadas</span>
                        <span class="text-zinc-600">&middot;</span>
                        <span class="text-amber-400/70">{ongoingSeasons} en progreso</span>
                        <span id="series-count" class="text-zinc-400"></span>
                    </p>
                </div>

                <!-- Dashboard compacto -->
                <section class="grid grid-cols-2 gap-2 sm:gap-3 w-full lg:w-auto lg:max-w-sm">
                    <CardDashboard text="Total temporadas" number={totalSeasons} color="sky" id="dash-total">
                        <IconDeviceTv width={20} height={20} />
                    </CardDashboard>
                    <CardDashboard text="Completadas" number={completedSeasons} color="green" id="dash-completed">
                        <IconDeviceTv width={20} height={20} />
                    </CardDashboard>
                    <CardDashboard text="En progreso" number={ongoingSeasons} color="amber" id="dash-ongoing">
                        <IconDeviceTv width={20} height={20} />
                    </CardDashboard>
                    <CardDashboard text="Plataformas" number={totalPlatforms} color="violet" id="dash-platforms">
                        <IconDeviceTv width={20} height={20} />
                    </CardDashboard>
                </section>
            </div>

            <!-- Linea decorativa -->
            <div class="mt-4 h-px bg-gradient-to-r from-amber-500/40 via-zinc-700/40 to-transparent"></div>
        </header>

        <!-- Filtros -->
        <FilterBar
            filters={[
                { id: "filter-year", label: "Ano", options: yearOptions, defaultValue: String(defaultYear) },
                { id: "filter-genre", label: "Genero", options: genreOptions, capitalize: true },
                { id: "filter-status", label: "Estado", options: statusOptions },
            ]}
        />

        <!-- Grid de Series -->
        <div id="series-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
            {seriesDataWithIndex.map((data, index) => (
                <CardSeriesList data={data} index={index} />
            ))}
        </div>

        <!-- Mensaje cuando no hay resultados -->
        <div id="no-results" class="hidden flex flex-col items-center justify-center py-16 text-zinc-500">
            <div class="mb-3 text-zinc-600">
                <IconSearchOff width={48} height={48} />
            </div>
            <p class="text-lg font-medium text-zinc-400">Sin resultados</p>
            <p class="text-sm mt-1">Prueba ajustando los filtros para encontrar series</p>
        </div>
    </main>
</Layout>

<script>
    let seriesController: AbortController | null = null;

    function animateValue(el: HTMLElement, newValue: string) {
        const oldValue = el.textContent || '';
        if (oldValue === newValue) return;
        el.style.opacity = '0';
        setTimeout(() => {
            el.textContent = newValue;
            el.style.opacity = '1';
        }, 150);
    }

    function updateSeriesDashboard(visibleCards: HTMLElement[]) {
        const dashTotal = document.getElementById('dash-total');
        const dashCompleted = document.getElementById('dash-completed');
        const dashOngoing = document.getElementById('dash-ongoing');
        const dashPlatforms = document.getElementById('dash-platforms');

        const total = visibleCards.length;
        let completed = 0;
        let ongoing = 0;
        const platforms = new Set<string>();

        visibleCards.forEach(card => {
            const status = card.dataset.status || '';
            if (status === 'completed') completed++;
            if (status === 'ongoing') ongoing++;
            const platform = card.dataset.platform || '';
            if (platform) platforms.add(platform);
        });

        if (dashTotal) animateValue(dashTotal, String(total));
        if (dashCompleted) animateValue(dashCompleted, String(completed));
        if (dashOngoing) animateValue(dashOngoing, String(ongoing));
        if (dashPlatforms) animateValue(dashPlatforms, String(platforms.size));
    }

    function initSeriesFilters() {
        if (seriesController) seriesController.abort();
        seriesController = new AbortController();
        const { signal } = seriesController;

        const seriesGrid = document.getElementById('series-grid') as HTMLElement | null;
        const noResults = document.getElementById('no-results');
        const seriesCount = document.getElementById('series-count');

        if (!seriesGrid) return;

        const cards = Array.from(seriesGrid.querySelectorAll('.card-series')) as HTMLElement[];

        function applyFiltersAndSort(values: Record<string, string>) {
            if (!seriesGrid) return;
            const grid = seriesGrid;

            const yearValue = values['filter-year'] || 'all';
            const genreValue = values['filter-genre'] || 'all';
            const statusValue = values['filter-status'] || 'all';
            const platformValue = values['filter-platform'] || 'all';
            const orderValue = values['filter-order'] || 'newest';

            const visibleCards: HTMLElement[] = [];
            cards.forEach((card) => {
                const cardYear = card.dataset.year;
                const cardGenres = card.dataset.genres?.toLowerCase() || '';
                const cardStatus = card.dataset.status;
                const cardPlatform = card.dataset.platform?.toLowerCase() || '';

                const matchYear = yearValue === 'all' || cardYear === yearValue;
                const matchGenre = genreValue === 'all' || cardGenres.includes(genreValue.toLowerCase());
                const matchStatus = statusValue === 'all' || cardStatus === statusValue;
                const matchPlatform = platformValue === 'all' || cardPlatform === platformValue.toLowerCase();

                if (matchYear && matchGenre && matchStatus && matchPlatform) {
                    card.style.display = '';
                    visibleCards.push(card);
                } else {
                    card.style.display = 'none';
                }
            });

            visibleCards.sort((a, b) => {
                switch (orderValue) {
                    case 'newest':
                        return parseInt(b.dataset.index || '0') - parseInt(a.dataset.index || '0');
                    case 'oldest':
                        return parseInt(a.dataset.index || '0') - parseInt(b.dataset.index || '0');
                    case 'title-asc':
                        return (a.dataset.title || '').localeCompare(b.dataset.title || '');
                    case 'title-desc':
                        return (b.dataset.title || '').localeCompare(a.dataset.title || '');
                    default:
                        return 0;
                }
            });

            visibleCards.forEach(card => grid.appendChild(card));
            cards.forEach(card => {
                if (card.style.display === 'none') grid.appendChild(card);
            });

            if (visibleCards.length === 0) {
                noResults?.classList.remove('hidden');
                grid.classList.add('hidden');
            } else {
                noResults?.classList.add('hidden');
                grid.classList.remove('hidden');
            }

            if (seriesCount) {
                seriesCount.textContent = `· ${visibleCards.length} serie${visibleCards.length !== 1 ? 's' : ''}`;
            }

            // Actualizar dashboard con datos filtrados
            updateSeriesDashboard(visibleCards);
        }

        document.addEventListener('filter-change', (e: Event) => {
            applyFiltersAndSort((e as CustomEvent).detail);
        }, { signal });

        // Aplicar filtros iniciales leyendo valores actuales de los selects
        const initialValues: Record<string, string> = {};
        const filtersSection = document.getElementById('filters');
        if (filtersSection) {
            const filterIds: string[] = JSON.parse(filtersSection.dataset.filterIds || '[]');
            filterIds.forEach(id => {
                const select = document.getElementById(id) as HTMLSelectElement | null;
                if (select) initialValues[id] = select.value;
            });
        }
        applyFiltersAndSort(initialValues);
    }

    document.addEventListener('astro:page-load', initSeriesFilters);
</script>
